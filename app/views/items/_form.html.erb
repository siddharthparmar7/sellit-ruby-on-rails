<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :price %>
    <%= f.input :category %>
    <%= f.input :description %>
    <%= f.input :status %>
    <%= f.input :image %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.input :location %>
    <%= f.input :user_id, :as => :hidden, input_html: {value: current_user.id} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
